
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(120,97,97,0.5) 0%, rgba(155,197,193,0.2) 50%), url(<%= image_path('betho_sky.jpg') %>);">
  <div class="loginbutton">
    <% if user_signed_in? %>
      <%= link_to destroy_user_session_path, method: :delete do %>
        <i class="fa fa-sign-out-alt"></i>  <%= t(".sign_out", default: "Log out") %>
      <% end %>
    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Sign Up"), new_user_session_path, class: "btn btn-primary" %>
    <% end %>
  </div>

  <!-- end of button -->
  <div class="banner-content">
    <h1>Betho Management</h1>
    <p>Discover our new estate management tool</p>
    <%= link_to 'Have a look at your estates', estates_path, class: "btn btn-primary" %>
  </div>


</div>

